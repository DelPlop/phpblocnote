{% trans_default_domain 'notes' %}
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <h4 class="w3-bar-item"><b>{{ ('categories.all'|trans) }}</b></h4>
    <a class="w3-bar-item w3-button w3-hover-black" href="{{ path('notes_important') }}">{{ ('notes.importants'|trans) }}</a>
    <a class="w3-bar-item w3-button w3-hover-black" href="{{ path('notes_action_needed') }}">{{ ('notes.action_needed'|trans) }}</a>
    {% for category in categories %}
        <a class="w3-bar-item w3-button w3-hover-black" href="{{ path('category_notes', { category: category.id }) }}">{{ category.name }}</a>
    {% endfor %}
{% endif %}
